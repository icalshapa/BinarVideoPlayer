<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BinarVideoPlayer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/custom_color_background</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/custom_color_gold</item>
        <item name="android:fontFamily">@font/news_cycle</item>
    </style>

    <style name="BottomNavigationViewInactiveTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/custom_color_background</item>
        <item name="android:fontFamily">@font/news_cycle</item>
    </style>

</resources>