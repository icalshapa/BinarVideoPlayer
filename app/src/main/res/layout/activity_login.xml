<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.login.LoginActivity">


    <ImageView
        android:id="@+id/iv_logo_login"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_100sdp"/>

    <Button
        android:id="@+id/btn_user_name"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_login"
        app:layout_constraintRight_toRightOf="@id/iv_logo_login"
        app:layout_constraintLeft_toLeftOf="@id/iv_logo_login"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="user name"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/bebas_neue_bold"/>

    <Button
        android:id="@+id/btn_password"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_user_name"
        app:layout_constraintRight_toRightOf="@id/iv_logo_login"
        app:layout_constraintLeft_toLeftOf="@id/iv_logo_login"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="password"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/bebas_neue_bold"/>

    <Button
        android:id="@+id/btn_login"
        android:padding="@dimen/_5sdp"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Login"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/bebas_neue_bold"
        app:layout_constraintTop_toBottomOf="@id/btn_password"
        app:layout_constraintRight_toRightOf="@id/iv_logo_login"
        app:layout_constraintLeft_toLeftOf="@id/iv_logo_login"
        android:layout_marginTop="@dimen/_50sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dont have account? sign up here"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintRight_toRightOf="@id/btn_login"
        app:layout_constraintLeft_toLeftOf="@id/btn_login"
        android:textColor="@color/green"
        android:fontFamily="@font/bebas_neue_bold"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_5sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>